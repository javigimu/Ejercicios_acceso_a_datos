package ejercicio0103;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;

public class Ejercicio0103 {

	public static void main(String[] args) {
		try (PrintWriter pw = new PrintWriter("triangle.txt")) {
			int ancho, alto;
			Scanner sc = new Scanner(System.in);
			
			System.out.println("Datos del triangulo");
			System.out.print("Ancho: ");
			ancho = sc.nextInt();
			System.out.print("Alto: ");
			alto = sc.nextInt();
			
			int asteriscos = alto;
			for (int fila=0; fila<ancho; fila++) {
				for (int colAst=0; colAst < asteriscos+1; colAst++) {
					System.out.print('*');
				}
				System.out.println();
				asteriscos++;
			}
			
		}catch(IOException ioe) {
			ioe.printStackTrace();
		}catch(Exception e) {
			e.printStackTrace();
		}
	}

}
