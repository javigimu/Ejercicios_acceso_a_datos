			System.out.println("Datos del triangulo");
			System.out.print("Ancho: ");
			ancho = sc.nextInt();
			System.out.print("Alto: ");
			alto = sc.nextInt();
			
			int asteriscos = 1;
			int espacios = ancho - 1;
			for (int fila=0; fila<ancho; fila++) {
				for (int colEspacios=0; colEspacios < espacios ; colEspacios++) {
					System.out.print(' ');
				}
				for (int colAst=0; colAst < asteriscos; colAst++) {
					
				}
			}
			
		}catch(IOException ioe) {
			ioe.printStackTrace();
		}catch(Exception e) {
			e.printStackTrace();
		}
	}

}
