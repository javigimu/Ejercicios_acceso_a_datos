package ejercicio0104;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;

public class Ejercicio0104 {

	public static void main(String[] args) {
		int ancho, alto;
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Datos del triangulo");
		System.out.print("Ancho: ");
		ancho = sc.nextInt();
		System.out.print("Alto: ");
		alto = sc.nextInt();
		
		int espacios = ancho-2;	
		int asteriscos = ancho;
		PrintWriter pw = null;
		try {
			pw = new PrintWriter("rectangle.txt");
			
			for (int fila = 0; fila < alto; fila++) {
				if (fila == 0 || fila == alto-1)
					System.out.print(asteriscos);
				else {
					System.out.print('*');
					for (int colEspacios=0; colEspacios<espacios; colEspacios++)
						System.out.print(' ');
					System.out.println('*');
				}
			}
			
		}catch (IOException ioe) {
			ioe.printStackTrace();
		}catch (Exception e) {
			e.printStackTrace();
		}finally {
			if (pw != null)
				pw.close();
		}
	}

}
